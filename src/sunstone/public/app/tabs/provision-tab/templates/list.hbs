<dl class="accordion accordion_list provision_list_templates" data-accordion>
  <dd class="{{#if opts.active}}is-active{{/if}} accordion-item" data-accordion-item>
    <a class="only-not-active accordion-title" href="#provision_list_template_accordion{{accordionId}}">
      <span class="button"> <i class="fa fa-fw fa-lg fa-th"/><i class="fa fa-fw fa-lg fa-chevron-left"/>
      </span>
    </a>
    <h3>
      {{!opts.title}}
      <span href"#" class="only-active button secondary provision_templates_list_refresh_button" 
          {{#unless opts.refresh}}hidden{{/unless}} title=" {{tr "Refresh"}}">
        <i class="fa fa-fw fa-lg fa-refresh"/></span>
      <span href"#" class="only-active button secondary provision_templates_list_filter_button" 
          {{#unless opts.filter}}hidden{{/unless}} title=" {{tr "Filter by User"}}">
        <i class="fa fa-fw fa-lg fa-filter"/>
      </span>
      <span class="only-active provision_list_templates_filter" hidden></span>
      <input type="search" class="provision_list_templates_search only-active provision-search-input" placeholder="Search Templates"/>
    </h3>
    <div id="provision_list_template_accordion{{accordionId}}" class="accordion-content" data-tab-content>
      <div class="row">
        <div class="provision_confirm_delete_template_div large-12 large-centered columns"></div>
      </div>
      <div class="row">
        <div class="large-12 large-centered columns">
          <table class="provision_templates_table">
            <thead hidden>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>User ID</th>
              </tr>
            </thead>
            <tbody hidden></tbody>
          </table>
          <br></div>
      </div>
    </div>
  </dd>
  <dd class="accordion-item" data-accordion-item>
    <a class="provision_show_template_accordion accordion-title" href="#provision_show_template_accordion{{accordionId}}"></a>
    <div id="provision_show_template_accordion{{accordionId}}" class="accordion-content" data-tab-content></div>
  </dd>
</dl>
