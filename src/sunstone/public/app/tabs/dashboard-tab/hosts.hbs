<div class="row  totals-info">
  <div class="small-12 medium-6 large-3 columns centered">
    <div class="small-12 large-12 columns text-center">
      <h2 class="subheader">
        <small>{{tr "HOSTs"}}</small>
        <br>
        <span class="total_hosts subheader"/> 
        <small><i class="fa fa-fw fa-lg fa-hdd-o"></i></small>
      </h2>
    </div>
    <div class="small-4 large-4 columns text-center">
      <h5 class="subheader">
        <span class="on_hosts subheader success-color"/>
        <br>
        <small class="success-color">{{tr "ON"}}</small>
      </h5>
    </div>
    <div class="small-4 large-4 columns text-center">
      <h5 class="subheader">
        <span class="off_hosts subheader"/>
        <br>
        <small>{{tr "OFF"}}</small>
      </h5>
    </div>
    <div class="small-4 large-4 columns text-center">
      <h5 class="subheader">
        <span class="error_hosts subheader alert-color"/>
        <br>
        <small class="alert-color">{{tr "ERROR"}}</small>
      </h5>
    </div>
    <div class="small-12 large-12 columns text-center">
      <br>
      <a class="button secondary radius tiny show_hosts_tab"> <i class="fa fa-lg fa-list fa-fw"></i>
      </a>
      <a class="button secondary  radius tiny show_create_host">
        <i class="fa fa-lg fa-plus fa-fw"></i><i class="fa fa-fw fa-lg fa-hdd-o"></i>
      </a>
    </div>
  </div>
  <div class="small-12 medium-6 large-9 columns">
    <div class="row">
      <div class="small-12 large-6 columns">
        <div id="dashboard_host_allocated_cpu" style="padding: 0px 40px"></div>
        <br>
        <div id="dashboard_host_real_cpu" style="padding: 0px 40px"></div>
      </div>
      <div class="small-12 large-6 columns">
        <div id="dashboard_host_allocated_mem" style="padding: 0px 40px"></div>
        <br>
        <div id="dashboard_host_real_mem" style="padding: 0px 40px"></div>
      </div>
    </div>
  </div>
</div>
<div class="row dashboard-widget-footer">
  <div class="small-3 large-3 columns text-center"></div>
</div>
