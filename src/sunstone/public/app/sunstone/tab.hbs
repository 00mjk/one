<div id="{{tabName}}" class="tab" style="display:none;">
  {{#if listHeader }}
  <div class="row header-row">
    <div class="large-12 columns">
      <h3 class="header-title only-right-list">
        <span class="header-resource">{{{listHeader}}}</span>
      </h3>
      <h3 class="header-title only-right-info" hidden>
        <span class="header-resource">
          {{{infoHeader}}} 
          <small class="resource-id"></small> 
          <small class="resource-info-header"></small> 
          <small class="resource-info-header-small"></small>
        </span>
      </h3>
      <h3 class="header-title only-right-form" hidden>
        <span class="right-form-title"></span>
      </h3>
    </div>
    {{#if buttons}}
    <div class="actions_row">
      <div class="large-3 columns only-right-list">
        {{#if dataTable.searchInputHTML}}
          {{{dataTable.searchInputHTML}}}
        {{/if}}
      </div>
      <div class="large-9 columns action_blocks"></div>
    </div>
    {{/if}}
  </div>
  {{/if}}

  <div class="right-list">
    {{#if dataTable.dataTableHTML}}
    <div class="row">
      <div class="large-12 columns">{{{dataTable.dataTableHTML}}}</div>
    </div>
    {{/if}}

    {{#if content}}
    {{{content}}}
    {{/if}}

    {{#if subheader}}
    <div class="row header-info">
      <div class="large-12 columns text-center totals-info">
        <h5>
          {{#if subheader}}
            {{{subheader}}}
          {{/if}}
        </h5>
      </div>
    </div>
    {{/if}}
  </div>

  <div class="right-info" hidden></div>

  <div class="large-12 small-12 right-form" hidden>
    <div class="loadingForm">
      <br>
      <br>
      <span class="fa-stack fa-5x"> <i class="fa fa-cloud fa-stack-2x"/><i class="fa  fa-spinner fa-spin fa-stack-1x fa-inverse"/>
      </span>
      <br>
      <br></div>
    <div class="contentForm"></div>
  </div>
</div>