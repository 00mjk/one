Import('env')

lib_name='nebula_core'

# Sources to generate the library
source_files=[
    'Nebula.cc',
    'NebulaTemplate.cc',
]

# Build library
env.StaticLibrary(lib_name, source_files)

# Build daemon
env.Append(LIBS=[
    'nebula_core',
    'nebula_vmm',
    'nebula_lcm',
    'nebula_im',
    'nebula_hm',
    'nebula_rm',
    'nebula_dm',
    'nebula_tm',
    'nebula_um',
    'nebula_mad',
    'nebula_template',
    'nebula_image',
    'nebula_pool',
    'nebula_host',
    'nebula_vnm',
    'nebula_vm',
    'nebula_common',
    'nebula_sql',
    'nebula_log',
    'crypto'
])

# Sources to generate the library
if env['sqlite']=='yes':
    env.Append(LIBS=['sqlite3'])

if env['mysql']=='yes':
    env.Append(LIBS=['mysqlclient'])


if not env.GetOption('clean'):
    env.ParseConfig('../../share/scons/get_xmlrpc_config server')

env.Program('oned.cc')
